@using BookStore.MVC.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hiệu Sách Tương Lai</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #2563EB, #7C3AED);
            --accent-color: #F59E0B;
            --background-light: #F8FAFC;
            --text-primary: #1E293B;
            --text-secondary: #64748B;
            --shadow-soft: 0 4px 12px rgba(0, 0, 0, 0.1);
            --border-radius: 12px;
        }

        body {
            background: var(--background-light);
            font-family: 'Inter', sans-serif;
            color: var(--text-primary);
            line-height: 1.5;
            margin: 0;
            transition: all 0.3s ease;
        }

        /* Notification Bar */
        .notification-bar {
            background: var(--accent-color);
            color: #FFFFFF;
            text-align: center;
            padding: 0.75rem;
            font-size: 0.9rem;
            font-weight: 500;
        }

        /* Navbar */
        .navbar {
            background: var(--primary-gradient);
            padding: 1rem 2rem;
            box-shadow: var(--shadow-soft);
        }

        .navbar-brand {
            font-size: 1.6rem;
            font-weight: 700;
            color: #FFFFFF !important;
        }

        .nav-link {
            color: #FFFFFF !important;
            font-weight: 500;
            padding: 0.5rem 1rem;
            transition: all 0.3s ease;
        }

            .nav-link:hover {
                color: var(--accent-color) !important;
                transform: translateY(-2px);
            }

        .form-control {
            border-radius: 50px;
            border: 1px solid #E2E8F0;
            padding: 0.5rem 1rem;
            box-shadow: none;
        }

        .cart-icon {
            position: relative;
            color: #FFFFFF;
        }

        .cart-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background: var(--accent-color);
            color: #FFFFFF;
            border-radius: 50%;
            padding: 3px 7px;
            font-size: 0.75rem;
            font-weight: 600;
        }

        /* Banner */
        .banner {
            background: var(--primary-gradient);
            color: #FFFFFF;
            padding: 3rem 0;
            text-align: center;
        }

            .banner h1 {
                font-size: 2.25rem;
                font-weight: 700;
                margin-bottom: 1rem;
            }

        .btn-buy {
            background: var(--accent-color);
            color: #FFFFFF;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

            .btn-buy:hover {
                background: #D97706;
                transform: scale(1.05);
            }

        /* Books Section */
        .book-card {
            border: none;
            border-radius: var(--border-radius);
            overflow: hidden;
            box-shadow: var(--shadow-soft);
            transition: all 0.3s ease;
            background: #FFFFFF;
        }

            .book-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
            }

            .book-card img {
                height: 200px;
                width: 100%;
                object-fit: cover;
            }

            .book-card .card-body {
                padding: 1.25rem;
            }

        .book-title {
            font-size: 1rem;
            font-weight: 600;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* Sidebar */
        .sidebar {
            background: #FFFFFF;
            border-radius: var(--border-radius);
            padding: 1.5rem;
            box-shadow: var(--shadow-soft);
            min-height: 500px;
        }

            .sidebar h5 {
                font-size: 1.25rem;
                font-weight: 600;
                margin-bottom: 1.5rem;
            }

            .sidebar .nav-link {
                color: var(--text-primary) !important;
                font-weight: 500;
                padding: 0.75rem 1rem;
                border-radius: 8px;
                transition: all 0.3s ease;
            }

                .sidebar .nav-link:hover {
                    background: var(--background-light);
                    color: var(--accent-color) !important;
                    padding-left: 1.25rem;
                }

            .sidebar i {
                color: var(--text-primary) !important;
                margin-right: 0.5rem;
            }

        /* Footer */
        footer {
            background: var(--primary-gradient);
            color: #FFFFFF;
            padding: 2rem 0;
        }

            footer a {
                color: #FFFFFF;
                text-decoration: none;
                transition: all 0.3s ease;
            }

                footer a:hover {
                    color: var(--accent-color);
                }

        /* Chatbox */
        .chatbox {
            position: fixed;
            bottom: 80px;
            right: 20px;
            width: 320px;
            background: #FFFFFF;
            border-radius: var(--border-radius);
            box-shadow: var(--shadow-soft);
            overflow: hidden;
            z-index: 1000;
            display: none;
        }

        .chatbox-header {
            background: var(--primary-gradient);
            color: #FFFFFF;
            padding: 0.75rem;
            font-weight: 600;
            text-align: center;
        }

        .chatbox-body {
            padding: 1rem;
            height: 220px;
            overflow-y: auto;
            background: #F8FAFC;
        }

        .chatbox-footer {
            padding: 0.75rem;
            border-top: 1px solid #E2E8F0;
            display: flex;
            gap: 0.5rem;
        }

            .chatbox-footer input {
                flex: 1;
                padding: 0.5rem 1rem;
                border-radius: 50px;
                border: 1px solid #E2E8F0;
                outline: none;
            }

            .chatbox-footer button {
                background: var(--accent-color);
                color: #FFFFFF;
                border: none;
                padding: 0.5rem 1rem;
                border-radius: 50px;
                font-weight: 500;
                cursor: pointer;
                transition: all 0.3s ease;
            }

                .chatbox-footer button:hover {
                    background: #D97706;
                }

        .chatbox-toggle {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background: var(--accent-color);
            color: #FFFFFF;
            border: none;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: var(--shadow-soft);
            cursor: pointer;
            z-index: 1001;
        }

        /* Cart Items */
        .cart-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 0;
            border-bottom: 1px solid #E2E8F0;
            gap: 1rem;
        }

        .cart-img {
            width: 50px;
            height: 75px;
            object-fit: cover;
            border-radius: 5px;
        }

        .cart-item-details {
            flex: 1;
            min-width: 120px;
        }

        .cart-item-title {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 0.25rem;
        }

        .cart-item-price {
            color: #16A34A;
            font-weight: 600;
        }

        .quantity-form {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-qty {
            background: var(--accent-color);
            color: #FFFFFF;
            border: none;
            width: 28px;
            height: 28px;
            border-radius: 50%;
            font-size: 1rem;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

            .btn-qty:hover {
                background: #D97706;
            }

        .qty-input {
            width: 40px;
            text-align: center;
            border: 1px solid #E2E8F0;
            border-radius: 5px;
            padding: 0.25rem;
        }

        .btn-delete {
            background: none;
            border: none;
            color: #EF4444;
            font-size: 1rem;
            cursor: pointer;
        }

            .btn-delete:hover {
                color: #DC2626;
            }
    </style>
</head>

<body>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg">
        <div class="container">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">Hiệu Sách An</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item"><a class="nav-link" asp-controller="ProductMVC" asp-action="Index">Xem Sách</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Bán Chạy</a></li>
                    <li class="nav-item"><a class="nav-link" href="#">Giảm Giá</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link cart-icon" asp-controller="Cart" asp-action="ViewCart">
                            <i class="fas fa-shopping-cart"></i>
                            @{
                                var cart = Context.Session.GetObjectFromJson<BookStore.BusinessObject.DTO.CartDTOForSession>("CART_SESSION");
                                var cartCount = cart?.Items?.Count ?? 0;
                            }
                            <span class="cart-badge">@cartCount</span>
                        </a>
                    </li>
                    @{
                        var userName = Context.Session.GetString("Username");
                        var role = Context.Session.GetString("Role");
                        var userEmail = Context.Session.GetString("UserEmail");
                    }
                    @if (!string.IsNullOrEmpty(userName) || !string.IsNullOrEmpty(userEmail))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Hello, @(string.IsNullOrEmpty(userName) ? userEmail : userName)
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" asp-controller="User" asp-action="Index">User Profile</a></li>
                                @if (role == "Admin")
                                {
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Index">Admin Dashboard</a></li>
                                }
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Logout</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Account" asp-action="Login"><i class="fas fa-user"></i></a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid py-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3">
                <div class="sidebar">
                    <h5>Quản Trị</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-chart-line"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="ProductManage" asp-action="Index">
                                <i class="fas fa-book"></i> Manage Product
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="CategoryManage" asp-action="Index">
                                <i class="fas fa-tags"></i> Manage Category
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="OrderManage" asp-action="Index">
                                <i class="fas fa-shopping-bag"></i> Manage Order
                            </a>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Main content -->
            <div class="col-md-9">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>
        </div>
    </div>

    <!-- Chatbox -->
    <div class="chatbox" id="chatbox">
        <div class="chatbox-header">Hỗ Trợ Trực Tuyến</div>
        <div class="chatbox-body">
            <p>Xin chào! Chúng tôi có thể giúp gì cho bạn?</p>
        </div>
        <div class="chatbox-footer">
            <input type="text" placeholder="Nhập tin nhắn..." id="chatInput">
            <button onclick="sendMessage()">Gửi</button>
        </div>
    </div>
    <button class="chatbox-toggle" id="chatToggle">
        <i class="fas fa-comment"></i>
    </button>

    <!-- Scripts -->
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Truncate long book titles
            const bookTitles = document.querySelectorAll('.book-title');
            bookTitles.forEach(title => {
                const text = title.textContent.trim();
                if (text.length > 25) {
                    title.textContent = text.substring(0, 22) + '...';
                }
            });

            // Toggle chatbox
            const chatbox = document.getElementById('chatbox');
            const chatToggle = document.getElementById('chatToggle');
            chatToggle.addEventListener('click', function () {
                chatbox.style.display = chatbox.style.display === 'none' ? 'block' : 'none';
            });

            // Handle sending messages
            function sendMessage() {
                const input = document.getElementById('chatInput');
                const message = input.value.trim();
                if (message) {
                    const chatBody = document.querySelector('.chatbox-body');
                    const newMessage = document.createElement('p');
                    newMessage.textContent = 'Bạn: ' + message;
                    chatBody.appendChild(newMessage);
                    input.value = '';
                    chatBody.scrollTop = chatBody.scrollHeight;
                }
            }

            // Expose sendMessage globally
            window.sendMessage = sendMessage;
        });
    </script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>