@model BookStore.BusinessObject.DTO.UserDTOs.UserDto
@{
    ViewData["Title"] = "Hồ Sơ Người Dùng";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet" />

    <style>
        :root {
            --primary-gradient: linear-gradient(135deg, #1E3A8A, #6B21A8);
            --neon-orange: #FF5733;
            --light-bg: #FFFFFF;
            --shadow-neon: 0 0 20px rgba(107, 33, 168, 0.5);
            --text-color: #F1F5F9;
            --card-border: linear-gradient(135deg, #3B82F6, #A855F7);
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            font-family: 'Poppins', sans-serif;
            color: #1F2937;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .profile-container {
            background: var(--light-bg);
            border-radius: 20px;
            box-shadow: var(--shadow-neon);
            padding: 3rem;
            max-width: 800px;
            width: 100%;
            position: relative;
            overflow: hidden;
            transition: transform 0.3s ease;
        }

            .profile-container::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                right: 0;
                bottom: 0;
                border-radius: 20px;
                border: 3px solid transparent;
                background: var(--card-border);
                -webkit-mask: linear-gradient(#fff 0 0) padding-box, linear-gradient(#fff 0 0);
                -webkit-mask-composite: destination-out;
                mask-composite: exclude;
                pointer-events: none; /* ✅ thêm dòng này để không chặn click */
            }

            .profile-container:hover {
                transform: translateY(-8px);
            }

        .profile-header {
            text-align: center;
            margin-bottom: 3rem;
            position: relative;
        }

            .profile-header h2 {
                font-weight: 600;
                font-size: 2.2rem;
                color: #1E3A8A;
                background: var(--primary-gradient);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
            }

            .profile-header .back-btn {
                position: absolute;
                left: 0;
                top: 0;
                font-size: 1.3rem;
                color: #6B7280;
                transition: color 0.3s ease;
            }

                .profile-header .back-btn:hover {
                    color: var(--neon-orange);
                }

        .profile-info-item {
            display: flex;
            align-items: center;
            margin-bottom: 1.8rem;
            padding: 1.2rem;
            background: #f8fafc;
            border-radius: 12px;
            transition: background 0.3s ease, transform 0.3s ease;
        }

            .profile-info-item:hover {
                background: #e0e7ff;
                transform: scale(1.02);
            }

            .profile-info-item label {
                font-weight: 600;
                color: #6B7280;
                width: 180px;
                font-size: 1.1rem;
            }

            .profile-info-item p {
                margin: 0;
                font-size: 1.15rem;
                color: #1F2937;
                flex: 1;
            }

        .action-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 3rem;
        }

        .btn-edit {
            background: var(--primary-gradient);
            color: var(--text-color);
            border: none;
            padding: 0.9rem 2.5rem;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: var(--shadow-neon);
        }

            .btn-edit:hover {
                transform: scale(1.05);
                box-shadow: 0 5px 15px rgba(107, 33, 168, 0.7);
            }

        .btn-order-history {
            background: var(--neon-orange);
            color: var(--text-color);
            border: none;
            padding: 0.9rem 2.5rem;
            border-radius: 30px;
            font-size: 1.1rem;
            font-weight: 600;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            box-shadow: var(--shadow-neon);
        }

            .btn-order-history:hover {
                background: #F97316;
                transform: scale(1.05);
                box-shadow: 0 5px 15px rgba(255, 87, 51, 0.7);
            }
    </style>
</head>
<body>
    <div class="container profile-container">
        <div class="profile-header">
            <a href="@Url.Action("Index", "Home")" class="back-btn">
                <i class="fas fa-arrow-left"></i>
            </a>
            <h2>Hồ Sơ Người Dùng</h2>
        </div>
        <div class="profile-info">
            <div class="profile-info-item">
                <label><i class="fas fa-user me-2"></i>Họ và tên:</label>
                <p>@Model.FullName</p>
            </div>
            <div class="profile-info-item">
                <label><i class="fas fa-envelope me-2"></i>Email:</label>
                <p>@Model.Email</p>
            </div>
            <div class="profile-info-item">
                <label><i class="fas fa-map-marker-alt me-2"></i>Địa chỉ:</label>
                <p>@Model.Address</p>
            </div>
            <div class="profile-info-item">
                <label><i class="fas fa-shield-alt me-2"></i>Vai trò:</label>
                <p>@Model.RoleName</p>
            </div>
            <div class="profile-info-item">
                <label><i class="fas fa-id-badge me-2"></i>Tên đăng nhập:</label>
                <p>@Model.Username</p>
            </div>
        </div>
        <div class="action-buttons">
            <a href="@Url.Action("UpdateUser", "User")" class="btn btn-edit">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
            <a href="@Url.Action("OrderHistory", "Order")" class="btn btn-order-history">Lịch sử đơn hàng</a>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const buttons = document.querySelectorAll('.btn-edit, .btn-order-history');
            buttons.forEach(button => {
                button.addEventListener('click', function () {
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = 'scale(1)';
                    }, 100);
                });
            });
        });
    </script>
</body>
</html>