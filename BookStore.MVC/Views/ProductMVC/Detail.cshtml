@model BookStore.MVC.ViewModels.ProductViewModel
@{
    ViewData["Title"] = "Chi Tiết Sách";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(to bottom, #FFFFFF, #E0E7FF);
            font-family: 'Poppins', sans-serif;
            color: #1F2937;
        }

        .product-detail-card {
            background: #FFFFFF;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(107, 33, 168, 0.2);
            padding: 2rem;
            margin-top: 2rem;
        }

        .product-detail-img {
            max-width: 100%;
            border-radius: 10px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
        }

        .rating-stars {
            color: #FFD700;
            font-size: 1.2rem;
            margin-bottom: 1rem;
        }

        .btn-buy {
            background: #FF5733;
            color: white;
            border: none;
            padding: 0.75rem 2rem;
            border-radius: 25px;
            font-weight: 600;
            transition: all 0.3s;
        }

            .btn-buy:hover {
                background: #F97316;
                transform: scale(1.05);
            }

        .related-books .book-card {
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            transition: all 0.3s;
            background: #FFFFFF;
        }

            .related-books .book-card:hover {
                transform: translateY(-5px);
            }

            .related-books .book-card img {
                height: 200px;
                width: 100%;
                object-fit: cover;
            }

        .related-books .card-body {
            padding: 1rem;
        }

        .book-title {
            font-size: 1rem;
            font-weight: 500;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
    </style>
</head>
<body>

    <!-- Product Detail -->
    <div class="container product-detail-card">
        <div class="row align-items-center">
            <div class="col-md-5 col-12">
                <img src="@Url.Content(string.IsNullOrEmpty(Model.ImageUrl) ? "~/images/noimage.png" : Model.ImageUrl)"
                     class="product-detail-img" alt="@Model.Title">
            </div>
            <div class="col-md-7 col-12">
                <h1 class="mb-2">@Model.Title</h1>
                <p class="text-muted mb-1">Tác giả: <strong>@Model.Author</strong></p>
                <div class="rating-stars">
                    <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i>
                    <span class="text-muted ms-2">(4.0 / 5)</span>
                </div>
                <p class="text-success fw-bold fs-3">@Model.Price.ToString("n0")₫</p>
                <p><strong>Thể loại:</strong> @Model.CategoryName</p>
                <p><strong>Tồn kho:</strong> <span class="@(Model.Stock > 0 ? "text-success" : "text-danger")">@Model.Stock</span></p>
                <p class="mt-3"><strong>Mô tả:</strong> @Model.Description</p>
                <div class="d-flex gap-3 mt-4">
                    <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                        <input type="hidden" name="productId" value="@Model.ProductId" />
                        <button type="submit" class="btn btn-buy">Thêm Vào Giỏ Hàng</button>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Related Books -->
    @if (Model.RelatedBooks != null && Model.RelatedBooks.Any())
    {
        <div class="container related-books mt-5">
            <h3 class="mb-4">Sách Liên Quan</h3>
            <div class="row">
                @foreach (var related in Model.RelatedBooks)
                {
                    <div class="col-md-3 col-sm-6 mb-4">
                        <a href="@Url.Action("Detail", "ProductMVC", new { id = related.ProductId })" class="text-decoration-none text-dark">
                            <div class="book-card">
                                <img src="@Url.Content(string.IsNullOrEmpty(related.ImageUrl) ? "~/images/noimage.png" : related.ImageUrl)" alt="@related.Title">
                                <div class="card-body">
                                    <h5 class="book-title">@related.Title</h5>
                                    <p class="text-muted">Tác giả: @related.Author</p>
                                    <p class="text-success fw-bold">@related.Price.ToString("n0")₫</p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        </div>
    }

</body>
</html>
